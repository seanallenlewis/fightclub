

<h1>The Cage</h1>
<div class="container">
  <h1>Newest Fighters</h1>
  <div class="row-fluid">

    <ul class="thumbnails">

      <% @fighters.order(id: :desc).limit(8).each do |f| %>
        <li class="span4" style="float:left;">
          <div class="thumbnail" style="width:130px; text-align:center;">
            <img data-src=<%= image_tag f.profile_pic.url(:thumbnail), class: "thumbnail" %>
            <div class="caption">
              <h3><%= link_to(f.name, fighter_path(f)) %>
            </div>
          </div>
        </li>
      <% end %>

    </ul>
  </div>
</div>

<div class="container">
  <h1>Sort fighters by location</h1>


  <%= select_tag(:location, '<option value=""></option><option value="Hollywood">Hollywood</option><option value="Beverly Hills">Beverly Hills</option>'.html_safe) %></select>

  <div class="row-fluid">
    <ul class="thumbnails">
      <% @fighters.order(id: :desc).limit(8).each do |f| %>
        <li class="span4" style="float:left;">
          <div class="thumbnail" style="width:130px; text-align:center;">
            <img data-src=<%= image_tag f.profile_pic.url(:thumbnail), class: "thumbnail" %>
            <div class="caption">
              <h3><%= link_to(f.name, fighter_path(f)) %>
            </div>
          </div>
        </li>
      <% end %>

    </ul>
  </div>
</div>
